{% extends "layout.j2" %}

{% block title %}Create board{% endblock %}
{% block header %}<h1>Create thread</h1>{% endblock %}
{% block content %}
<form action="{{ url_for('board.create_board') }}" method="post">
    {# {{ add_csrf_token() }} #}
    <p>
        <label for="name">Title</label>
        <input type="text" name="name">
    </p>
    <p>
        <label for="description">Description</label> 
        <textarea name="description" rows="2"></textarea>
    </p>
    <input class="accent-fill" type="submit" value="Create">
</form>
{% endblock %}